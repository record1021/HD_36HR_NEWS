<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/welcome"
    android:layout_height="match_parent"
    >

    <View
     android:id="@+id/category_item_type"
        android:layout_marginLeft="@dimen/welcome"
        android:layout_width="2dp"
        android:layout_height="@dimen/welcome"
        android:background="@color/colorAccent"/>

    <TextView
        android:layout_marginLeft="@dimen/welcome"
        android:id="@+id/category_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/category_item_text_size"
        android:text="@string/app_name"/>


</LinearLayout>
