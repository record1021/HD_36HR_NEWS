<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/home_bottom_tab_height">

    <ImageView
        android:id="@+id/top_bar_menu"
        android:src="@mipmap/nav_icon_navigation"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/category_item_text_size"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/top_bar_title"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="新闻"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/top_bar_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/category_item_text_size"
        android:layout_centerInParent="true"
        android:src="@mipmap/nav_icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>